{
  "name": "digify",
  "version": "0.1.0",
  "description": "combine audio and image files to create video files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder build --win --publish never",
    "build": "electron-builder build --linux --mac --win --publish never",
    "deploy": "electron-builder build --linux --mac --win --publish always",
    "download-ffmpeg": "mkdir -p ffmpeg-mac && wget https://github.com/mifi/ffmpeg-build-script/releases/download/n4.3.1/ffmpeg -O ffmpeg-mac/ffmpeg && wget https://github.com/mifi/ffmpeg-build-script/releases/download/n4.3.1/ffprobe -O ffmpeg-mac/ffprobe && chmod +x ffmpeg-mac/ffmpeg && chmod +x ffmpeg-mac/ffprobe"
  },
  "build": {
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json"
    ],
    "appId": "digify",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "category": "TODO: fill here the category of your app",
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MartinBarker/digify.git"
  },
  "keywords": [
    "ffmpeg"
  ],
  "author": "Martin Barker <martinbarker99@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MartinBarker/digify/issues"
  },
  "homepage": "https://github.com/MartinBarker/digify#readme",
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "bootstrap": "^4.5.3",
    "datatables.net-dt": "^1.10.21",
    "datatables.net-rowreorder-dt": "^1.2.7",
    "dotenv": "^8.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-notarize": "^1.0.0",
    "electron-updater": "^4.3.5",
    "execa": "^5.0.0",
    "ffmpeg-ffprobe-static": "^4.3.1-rc.2",
    "ffmpeg-static": "^4.2.7",
    "ffmpeg-static-electron": "^2.0.1",
    "ffprobe-static": "^3.0.0",
    "ffprobe-static-electron": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "image-size": "^0.9.3",
    "jquery": "^3.5.1",
    "moment": "^2.29.1",
    "music-metadata": "^7.5.2",
    "open": "^7.2.1",
    "os": "^0.1.1",
    "popper.js": "^1.16.1",
    "readline": "^1.3.0"
  }
}
