{
  "name": "digify",
  "version": "0.0.8",
  "description": "combine audio and image files to create video files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --linux --mac --win --publish never",
    "deploy": "electron-builder build --linux --mac --win --publish always"
  },
  "build": {
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json"
    ],
    "appId": "digify",
    "afterSign": "scripts/notarize.js",
    "mac": {
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "category": "TODO: fill here the category of your app",
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MartinBarker/digify.git"
  },
  "keywords": [
    "ffmpeg"
  ],
  "author": "Martin Barker <martinbarker99@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MartinBarker/digify/issues"
  },
  "homepage": "https://github.com/MartinBarker/digify#readme",
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-notarize": "^1.0.0",
    "electron-updater": "^4.3.5",
    "ffmpeg-static": "^4.2.7",
    "ffmpeg-static-electron": "^2.0.1",
    "ffprobe-static": "^3.0.0",
    "ffprobe-static-electron": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2"
  }
}
