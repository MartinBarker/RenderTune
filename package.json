{
  "name": "rendertune",
  "productName": "RenderTune",
  "version": "0.2.7",
  "description": "combine audio and image files to create video files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder build --win --publish never",
    "build-win-publish": "electron-builder build --win --publish always",
    "build": "electron-builder build --linux --mac --win --publish never",
    "deploy": "electron-builder build --linux --mac --win --publish always",
    "download-ffmpeg": "git clone https://git.ffmpeg.org/ffmpeg.git ffmpeg-mac && cd ffmpeg-mac && ./configure pkg_config='pkg-config --static' --pkg-config-flags='--static' --libdir=/usr/local/lib --extra-version=ntd_20150128 --disable-shared --disable-lzma --enable-gpl --enable-pthreads --enable-nonfree --disable-libass --enable-libfdk-aac  --enable-libmp3lame  --enable-libx264 --enable-static --enable-filters --enable-runtime-cpudetect  && make && cd ..",
    "build-mas": "electron-builder build --mac"
  },
  "browserslist": {
    "production": [
      "electron 8.0"
    ],
    "development": [
      "electron 8.0"
    ]
  },
  "build": {
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "src/",
      "src/**/*",
      "build/**/*",
      "node_modules/ffmpeg-ffprobe-static/ffmpeg",
      "node_modules/ffmpeg-ffprobe-static/ffprobe"
    ],
    "asar": {
      "smartUnpack": true
    },
    "win": {
      "target": [
        "nsis-web",
        "portable",
        "appx"
      ]
    },
    "appx": {

      "applicationId": "RenderTune",
      "identityName": "1845martinbarker.digify",
      "publisher": "CN=E69B865D-5831-4BE5-9AA4-08E27DAAD66C",
      "publisherDisplayName": "martinbarker",
      "backgroundColor": "#a0beeb"
      }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MartinBarker/rendertune.git"
  },
  "keywords": [
    "ffmpeg"
  ],
  "author": {
    "name": "Martin Barker",
    "email": "martinbarker99@gmail.com",
    "url": "https://martinbarker.me/digify"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MartinBarker/digify/issues"
  },
  "homepage": "https://github.com/MartinBarker/digify#readme",
  "devDependencies": {
    "electron": "^11.3.0",
    "electron-builder": "^22.2.0",
    "electron-builder-notarize": "^1.1.2"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "datatables.net-dt": "^1.10.21",
    "datatables.net-rowreorder-dt": "^1.2.7",
    "dotenv": "^8.2.0",
    "electron-builder-notarize": "^1.1.2",
    "electron-is-dev": "^1.2.0",
    "electron-notarize": "^1.0.0",
    "electron-osx-sign": "^0.5.0",
    "electron-updater": "^4.3.5",
    "execa": "^5.0.0",
    "ffmpeg-ffprobe-static": "^4.3.1-rc.2",
    "ffmpeg-static": "^4.2.7",
    "ffmpeg-static-electron": "^2.0.1",
    "ffprobe-static": "^3.0.0",
    "ffprobe-static-electron": "^2.0.0",
    "find-config": "^1.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "image-size": "^0.9.3",
    "jquery": "^3.5.1",
    "moment": "^2.29.1",
    "music-metadata": "^7.5.2",
    "open": "^7.2.1",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "popper.js": "^1.16.1",
    "readline": "^1.3.0",
    "trash": "^6.1.1"
  },
  "resolutions": {
    "electron-builder": "22.2.0"
  }
}
