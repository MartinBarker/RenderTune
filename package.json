{
  "name": "digify",
  "productName": "Digify",
  "version": "0.1.0",
  "description": "combine audio and image files to create video files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder build --win --publish never",
    "build-mac": "electron-builder build --mac --publish never",
    "build": "electron-builder build --linux --mac --win --publish never",
    "deploy": "electron-builder build --linux --mac --win --publish always"
  },
  "build": {
    "asarUnpack": [
      "**/*.node",
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json"
    ],
    "appId": "com.martinbarker.digify",
    "productName":"Digify-mac",
    "buildVersion":"1",
    "copyright": "Copyright Â© 2020 Martin Barker/company", 
    "afterSign": "scripts/notarize.js",
    "mac": {
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mas.plist",
      "type":"distribution",
      "provisioningProfile": "embedded.provisionprofile",
      "target": [
        "mas"
      ]
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "category": "TODO: fill here the category of your app",
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "build/icon.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MartinBarker/digify.git"
  },
  "keywords": [
    "ffmpeg"
  ],
  "author": "Martin Barker <martinbarker99@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MartinBarker/digify/issues"
  },
  "homepage": "https://github.com/MartinBarker/digify#readme",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "bootstrap": "^4.5.3",
    "datatables.net-dt": "^1.10.21",
    "datatables.net-rowreorder-dt": "^1.2.7",
    "dotenv": "^8.2.0",
    "electron-notarize": "^1.0.0",
    "electron-updater": "^4.3.5",
    "ffmpeg-static": "^4.2.7",
    "ffmpeg-static-electron": "^2.0.1",
    "ffprobe-static": "^3.0.0",
    "ffprobe-static-electron": "^2.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "image-size": "^0.9.3",
    "jquery": "^3.5.1",
    "music-metadata": "^7.5.2",
    "open": "^7.2.1",
    "popper.js": "^1.16.1"
  }
}
